		<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js" type="text/javascript"></script>
	</head>
	<body id="body">
	    {{#if user}}
	        <div id="user" style="display: none;">{{user.username}},{{user.email}}</div>
	        {{#if user.twitterId}}
	        	<div id="twitter-flag"></div>
	        {{/if}}
	    {{/if}}
	    
	    {{#if success_msg}}
            <div id="success-msg" class="flag-alert">{{success_msg}}</div>
        {{/if}}
        {{#if error_msg}}
            <div id="error-msg" class="flag-alert">{{error_msg}}</div>
        {{/if}}
        {{#if error}}
            <div id="error" class="flag-alert">{{error}}</div>
        {{/if}}
        {{#if success}}
            <div id="success" class="flag-alert">{{success}}</div>
        {{/if}}
        
		{{{body}}}
		
		<script>
			window.twttr = (function(d, s, id) {
			    var js, fjs = d.getElementsByTagName(s)[0],
			    t = window.twttr || {};
			    if (d.getElementById(id)) return t;
			    js = d.createElement(s);
			    js.id = id;
			    js.src = "https://platform.twitter.com/widgets.js";
			    fjs.parentNode.insertBefore(js, fjs);
			
			    t._e = [];
			    t.ready = function(f) {
			    	t._e.push(f);
			    };
			
			    return t;
			}(document, "script", "twitter-wjs"));
		</script>
		
